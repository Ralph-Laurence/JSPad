<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--LOOK N FEEL SETTING GROUP TITLE-->
    <TextView
        android:textColor="@color/menubar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_group_lookandfeel"
        android:textSize="16sp"/>

    <!--SETTINGS FOR EDITOR THEME-->
    <LinearLayout
        android:layout_marginVertical="14dp"
        android:layout_width="match_parent"
        android:paddingRight="24dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/launch_subtitle_color"
            android:text="@string/settings_item_theme"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_marginRight="14dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/textview_theme_indicator"
                android:textColor="@color/menubar"/>

            <ImageButton
                android:id="@+id/setting_button_change_theme"
                android:layout_gravity="center_vertical"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icn_settings"
                android:layout_alignParentRight="true"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/repo_list_divider"/>

    <!--SETTINGS FOR EDITOR FONT SIZE-->
    <LinearLayout
        android:layout_marginVertical="14dp"
        android:layout_width="match_parent"
        android:paddingRight="24dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/launch_subtitle_color"
            android:text="@string/settings_item_font_size"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/setting_button_change_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_marginRight="14dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/textview_font_size_indicator"
                android:textColor="@color/menubar"/>

            <ImageButton
                android:id="@+id/btn_change_font_size"
                android:layout_gravity="center_vertical"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icn_edit"
                android:layout_alignParentRight="true"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/repo_list_divider"/>

    <!--SETTINGS FOR EDITOR TAB SIZE-->
    <LinearLayout
        android:layout_marginVertical="14dp"
        android:layout_width="match_parent"
        android:paddingRight="24dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/launch_subtitle_color"
            android:text="@string/settings_item_tab_size"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/setting_button_change_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_marginRight="14dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/textview_tab_indicator"
                android:textColor="@color/menubar"/>

            <ImageButton
                android:id="@+id/btn_change_tabsize"
                android:layout_gravity="center_vertical"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icn_edit"
                android:layout_alignParentRight="true"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/repo_list_divider"/>

</merge>


