<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp">

    <RadioGroup
            android:id="@+id/theme_selector_group"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="@string/theme_category_dark"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_theme_dark"
            android:text="@string/theme_name_dark"/>

        <RadioButton
            android:id="@+id/radio_theme_gruvbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme_name_gruvbox"/>

        <RadioButton
            android:id="@+id/radio_theme_twilight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme_name_twilight"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginVertical="8dp"
            android:text="@string/theme_category_light"/>

        <RadioButton
            android:id="@+id/radio_theme_clouds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme_name_clouds"/>

        <RadioButton
            android:id="@+id/radio_theme_eclipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme_name_eclipse"/>

    </RadioGroup>

</LinearLayout>

